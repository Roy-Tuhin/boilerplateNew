    "version": "0.2.0",
    "configurations": [
        {
            "name": "glitz",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "glitz (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "glitz (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "dev",
            "request": "launch",
            "type": "dart",
            "args": [
                
                "--flavor", //flavor name
                "dev",
                "--no-multidex",
                "-t", // if your have different main file
                "lib/main_dev.dart" 
            ]
        }        
    ]
}